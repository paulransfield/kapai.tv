sudo chown $USER:$USER -R <path to>/.blabla

ip addr show eth0 | grep inet | awk '{ print $2; }' | sed 's/\/.*$//'


cd /var/www/html
sudo cp -R bestpractice [new domain name]
sudo chown $USER:$USER -R [new domain name]
sudo cp /etc/nginx/sites-available/bestpractice /etc/nginx/sites-available/[new domain name]
sudo nano /etc/nginx/sites-available/[new domain name]
sudo ln -s /etc/nginx/sites-available/[new domain name] /etc/nginx/sites-enabled/
sudo service nginx restart
add ns1=[IP address] ns2=[IP address] n3=[IP address]
add ns1.digitalocean.com | ns2.digitalocean.com | ns3.digitalocean.com for DNS

lsof -ti:3000 | xargs kill -9 #kill the process listening on port 3000
